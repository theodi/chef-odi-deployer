<%
   @canonical_name = "%s.%s" % [
           @servername,
           @domain
   ]

   if @non_odi_hostname
     @canonical_name = @non_odi_hostname
   end
%>
upstream <%= @servername %> {
  server 127.0.0.1:<%= @port %>;
}

server {
  listen <%= @listen_port %><%= if @default then " default" end %>;
  server_name <%= @canonical_name %>;
  access_log /var/log/nginx/<%= @canonical_name %>.log;
  error_log /var/log/nginx/<%= @canonical_name %>.err;
  root /var/www/<%= @canonical_name %>/current/public/;

  location / {
    try_files $uri @backend;
  }

<% if @static_assets %>
  location ~ ^/(assets)/ {
    gzip_static on; # to serve pre-gzipped version
    expires max;
    add_header Cache-Control public;
  }

<% end %>
  location @backend {
    proxy_set_header X-Forwarded-Proto 'http';
    proxy_set_header Host $server_name;
    proxy_pass http://<%= @servername %>;
  }
}
<% if @catch_and_redirect %>

server {
  listen <%= @listen_port %>;
  server_name <%= @catch_and_redirect %>;
  rewrite ^/(.*) http://<%= @canonical_name %>/$1 permanent;
}
<% end %>