upstream <%= @servername %> {
  server 127.0.0.1:<%= @port %>;
}

server {
  listen <%= @listen_port %><%= if @default then " default" end %>;
  server_name <%= @project_fqdn %>;
  access_log /var/log/nginx/<%= @project_fqdn %>.log;
  error_log /var/log/nginx/<%= @project_fqdn %>.err;
  root /var/www/<%= @project_fqdn %>/current/public/;

  location / {
    try_files $uri @backend;
  }

<% if @static_assets %>
  location ~ ^/(assets)/ {
    <% if @assets_allow_origin %>
      add_header Access-Control-Allow-Origin "<%= @assets_allow_origin %>";
    <% end %>
    gzip_static on; # to serve pre-gzipped version
    expires max;
    add_header Cache-Control public;
  }

<% end %>
  location @backend {
    proxy_set_header X-Forwarded-Proto 'http';
    proxy_set_header Host $server_name;
    proxy_pass http://<%= @servername %>;
  }
}
<% if @catch_and_redirect %>

server {
  server_name <%= @catch_and_redirect %>;
  listen <%= @listen_port %>;
  rewrite ^/(.*)$ http://<%= @project_fqdn %>/$1 permanent;
}
<% end %>
